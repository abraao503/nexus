{
  "name": "nexus",
  "version": "1.0.0",
  "main": "index.js",
  "author": "abraao503 <abraao503@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --cls src/server.ts",
    "test:unit": "jest --verbose --no-cache --maxWorkers=1 --bail",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "npx prisma generate && node dist/src/server.js"
  },
  "devDependencies": {
    "@rocketseat/eslint-config": "^1.2.0",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.2.5",
    "@types/pg": "^8.10.7",
    "eslint": "^8.42.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "prisma": "^5.1.1",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "lint-staged": {
    "*.ts": [
      "yarn jest --bail --findRelatedTests --maxWorkers=1 --passWithNoTests"
    ]
  },
  "dependencies": {
    "pg": "^8.11.3"
  }
}
